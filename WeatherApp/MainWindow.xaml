<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="WeatherApp" Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="#001523">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#00111c"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="WeatherApp"
                       FontSize="20"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Dosis"/>

            <Button Click="OFF_Click"
                    Grid.Column="11" Cursor="Hand">
                
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily"
                                    Value="Fonts/#Dosis"/>
                        <Setter Property="Background" Value="#eb4034"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e81c0e"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="20" Height="20"
                                HorizontalAlignment="Right"
                                Margin="0 0 15 0"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>

        <StackPanel Grid.Row="1">

            <StackPanel Margin="40 20 0 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="WeatherApp"
                           FontSize="80"
                           Foreground="White"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           FontFamily="Fonts/#Dosis"/>
                </StackPanel>

                <StackPanel Margin="20 50 0 0">
                    <TextBlock Text="City"
                       Foreground="White"
                       FontSize="40"
                       FontWeight="Normal"
                       FontFamily="Fonts/#Dosis"/>

                    <TextBox Margin="0 5 0 0"
                             x:Name="Country"
                             HorizontalAlignment="Left"
                             Background="#002137"
                             BorderBrush="#002137"
                             FontSize="30"
                             Foreground="White"
                             Width="300"/>

                    <TextBlock Text="Temp"
                       Foreground="White"
                       FontSize="40"
                       FontWeight="Normal"
                       FontFamily="Fonts/#Dosis"
                       Margin="0 10 0 0"/>

                    <TextBlock Margin="0 5 0 0"
                             x:Name="temp"
                             Text=""
                             HorizontalAlignment="Left"
                             FontSize="30"
                             Foreground="White"
                             Width="100" Height="50"/>
                </StackPanel>
                
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="60 10 0 0">
                <Button Content="Search"
                        Click="Search_Click"
                        Foreground="white"
                        FontSize="20"
                        FontWeight="DemiBold">

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="TextElement.FontFamily"
                                    Value="Fonts/#Dosis"/>
                            <Setter Property="Background" Value="#00406c"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#003356"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="80" Height="35"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
